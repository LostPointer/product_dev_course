# Auth Proxy Environment Configuration
# Для локальной разработки используйте localhost
# Для Docker Compose используйте имена сервисов (см. env.docker.example в корне проекта)

PORT=8080

# Upstream URLs
# Локально: http://localhost:8002
# Docker: http://experiment-service:8002
TARGET_EXPERIMENT_URL=http://localhost:8002

# Локально: http://localhost:8001
# Docker: http://auth-service:8001
AUTH_URL=http://localhost:8001

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
ACCESS_COOKIE_NAME=access_token
REFRESH_COOKIE_NAME=refresh_token
ACCESS_TTL_SEC=900
REFRESH_TTL_SEC=1209600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# Logging
LOG_LEVEL=info

